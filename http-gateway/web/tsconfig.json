{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["es2020", "dom"],
    "jsx": "preserve",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": false,
    "allowJs": true,
    "jsxImportSource": "@emotion/react",
    "declaration": true,
    "sourceMap": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "types": ["node", "react", "react-is/next", "@emotion/react/types/css-prop"],
    "paths": {
      "@/*": ["src/*"],
      "@shared-ui": ["./packages/shared-ui/src"],
      "@shared-ui/*": ["./packages/shared-ui/src/*"],
      "crypto": ["node_modules/crypto-browserify"],
      "stream": ["node_modules/stream-browserify"]
    }
  },
  "include": ["src/**/*", "test/**/*", "./packages/shared-ui/src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "./packages/shared-ui/src/components/Atomic/Icon/components/**"
  ]
}
